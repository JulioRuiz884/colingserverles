@page "/tiposocial"
@inject SweetAlertService sweetAlertService
@inject ITipoSocialService servicioTipoSocial

<h3>Listar Tipo Social</h3>

<div class="form-group row">
    <div class="col-sm-10">
        <a href="/tiposocial/crear" class="btn btn-primary m-1">Agregar Nuevo</a>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th><strong>Nombre Tipo Social</strong></th>
                <th><strong>Estado</strong></th>
                <th><strong>Opciones</strong></th>
            </tr>
        </thead>
        @foreach (var item in tipoSocials)
        {
            <tr>
                <td>@item.NombreSocial</td>
                <td>@item.Estado</td>
                <td>
                    <button class="btn btn-danger ms-1" @onclick="(e=>Eliminar(item.Id))">Eliminar</button>
                </td>
            </tr>
        }
    </table>
</div>


@code {
    public List<TipoSocial> tipoSocials { get; set; } = new List<TipoSocial>();

    protected override async Task OnInitializedAsync()
    {
        var respuesta = await servicioTipoSocial.ListarTipoSocial();
        tipoSocials = respuesta;
    }
    private async Task Eliminar(int id)
    {
        bool eliminado = await servicioTipoSocial.EliminarTipoSocial(id);
        if (eliminado)
        {
            await sweetAlertService.FireAsync("Exito", "El idioma ha sido eliminado correctamente", SweetAlertIcon.Success);
            await OnInitializedAsync();
        }
        else
        {
            await sweetAlertService.FireAsync("Error", "No se puedo eliminar el idioma");
        }

    }
}
