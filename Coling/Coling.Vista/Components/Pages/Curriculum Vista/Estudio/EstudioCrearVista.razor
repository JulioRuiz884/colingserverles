@page "/estudio/crear"
@inject IEstudioService servicioEstudio
@inject SweetAlertService sweetAlertService
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager

<h3>Crear Estudio</h3>

<EstudioFormularioVista @ref="insForm" estudio="estudio" OnValidSubmit="Crear" Cancelar="Navegar"></EstudioFormularioVista>

@code {
    private Estudio estudio = new();
    private EstudioFormularioVista? insForm;

    private async Task Crear()
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoianVsaW8iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxMjg1MzM2Nn0.9cbGtdpxQ9iOv2eOVA5I3ojb-jT3RPfp7wv4wZOXo2w";
        estudio.PartitionKey = "Educacion";
        var respuesta = await servicioEstudio.InsertarEstudio(estudio, token);
        if(!respuesta)
        {
            await sweetAlertService.FireAsync("Error","No se pudo guardar",SweetAlertIcon.Error);
            return;
        }
        Navegar();
    }

    private void Navegar()
    {
        insForm!.formularioPostOk = true;
        NavigationManager.NavigateTo("./estudios");
    }
}